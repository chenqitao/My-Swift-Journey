{
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "Test toggle buttons..."
    },
    {
      "type": "TextBlock",
      "text": "Here's the thing",
      "id": "thingToToggle",
      "isVisible": false
    }
  ],
  "actions": [
    {
      "type": "Action.ToggleVisibility",
      "title": "Toggle",
      "targetElements": [
        "thingToToggle"
      ]
    },
    {
      "type": "Action.ToggleVisibility",
      "title": "Show",
      "targetElements": [
        {
          "elementId": "thingToToggle",
          "isVisible": true
        }
      ]
    },
    {
      "type": "Action.ToggleVisibility",
      "title": "Hide",
      "targetElements": [
        {
          "elementId": "thingToToggle",
          "isVisible": false
        }
      ]
    }
  ]
}
