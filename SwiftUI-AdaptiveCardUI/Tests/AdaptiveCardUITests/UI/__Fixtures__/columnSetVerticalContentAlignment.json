{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "style": "emphasis",
          "items": [
            {
              "type": "TextBlock",
              "text": "Vertical"
            },
            {
              "type": "TextBlock",
              "text": "Content"
            },
            {
              "type": "TextBlock",
              "text": "Alignment"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "style": "emphasis",
          "items": [
            {
              "type": "TextBlock",
              "text": "Top"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "style": "emphasis",
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "Center"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "style": "emphasis",
          "verticalContentAlignment": "bottom",
          "items": [
            {
              "type": "TextBlock",
              "text": "Bottom"
            }
          ]
        }
      ]
    }
  ]
}
